#!/usr/bin/python
import sys
import math

num_host_bits = 32 - int(sys.argv[1])
num_addr = int(math.pow(2, num_host_bits))
usable_addr = num_addr - 2
if(usable_addr < 0):
	usable_addr = 0

netmasks = ['0.0.0.0', '128.0.0.0', '192.0.0.0', '224.0.0.0',
	'240.0.0.0', '248.0.0.0', '252.0.0.0', '254.0.0.0',
	'255.0.0.0', '255.128.0.0', '255.192.0.0', '255.224.0.0',
	'255.240.0.0', '255.248.0.0', '255.252.0.0', '255.254.0.0', 
	'255.255.0.0', '255.255.128.0', '255.255.192.0', '255.255.224.0', 
	'255.255.240.0', '255.255.248.0', '255.255.252.0', '255.255.254.0', 
	'255.255.255.0', '255.255.255.128', '255.255.255.192', 
	'255.255.255.224', '255.255.255.240', '255.255.255.248', 
	'255.255.255.252', '255.255.255.254', '255.255.255.255']

print "addresses: ", num_addr, " usable: ", usable_addr, " netmask: ", netmasks[ int(sys.argv[1]) ]



